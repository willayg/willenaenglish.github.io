<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bing Image Search</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding: 2em;
    }
    input {
      padding: 10px;
      width: 60%;
      font-size: 1rem;
    }
    button {
      padding: 10px 20px;
      font-size: 1rem;
      margin-left: 10px;
    }
  </style>
</head>
<body>
  <h1>Search for an Image</h1>
  <input type="text" id="searchTerm" placeholder="Enter a word or phrase">
  <button onclick="searchBing()">Search</button>

  <script>
    function searchBing() {
      const query = document.getElementById('searchTerm').value.trim();
      if (!query) return;
      const url = `https://www.bing.com/images/search?q=${encodeURIComponent(query)}`;
      window.open(url, '_blank'); // Opens new tab (works in Acode preview browser)
    }
  </script>
</body>
</html>
